<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuthStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorPrimaryDark">@color/app_yellow</item>
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorAccent">@color/ghost_yellow</item>
        <item name="statusBarBackground">@color/white</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="background">@drawable/rectangle_2</item>
    </style>

    <style name="hey_there_w">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">#3A3A3A</item>
    </style>

    <style name="customET" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="startIconCheckable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="hintEnabled">false</item>
        <item name="maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="boxStrokeWidth">@dimen/_2sdp</item>
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="boxStrokeWidthFocused">@dimen/_2sdp</item>
        <item name="android:textColorHighlight">@color/ghost_yellow</item>
    </style>

    <style name="customPassET" parent="customET">
        <item name="startIconDrawable">@drawable/ic_pass_lock</item>
        <item name="android:inputType">textPassword</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/yellow</item>
    </style>

    <style name="customInputTxtPass" parent="customInputTxt">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="customInputTxt">
        <item name="android:inputType">textPassword</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="customET_OTP" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:background">@drawable/rectangle_otp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:hint">"-"</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="login_here">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <style name="sign_up">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/yellow_1</item>
    </style>

    <style name="wide_btn" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rectangle_2</item>
    </style>

    <!--======================= Styles on the profile screen=================================-->

    <style name="profile_txt1">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:letterSpacing">.02</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="profile_txt2">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:drawablePadding">@dimen/_2sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="profile_btn">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rectangle_2</item>
        <item name="android:paddingStart">@dimen/_25sdp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="profile_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
    </style>

    <style name="profile_relative">
        <item name="android:colorFocusedHighlight">#757575</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
    </style>

    <style name="profile_line">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/dividerHorizontal</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>

    </style>

    <style name="profile_sign_up" parent="sign_up">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/yellow_1</item>
    </style>
</resources>