<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_dash"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.quickghy.qgdaksha.ui.dash.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.quickghy.qgdaksha.ui.dash.cart.CartFragment"
        android:label="cart_fragment"
        tools:layout="@layout/cart_fragment" />
    <fragment
        android:id="@+id/notifFragment"
        android:name="com.quickghy.qgdaksha.ui.dash.offers.OffersFragment"
        android:label="notif_fragment"
        tools:layout="@layout/notif_fragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.quickghy.qgdaksha.ui.dash.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <action
        android:id="@+id/action_global_cartFragment"
        app:destination="@id/cartFragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/cartFragment"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_notifFragment"
        app:destination="@id/notifFragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/notifFragment"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/profileFragment"
        app:popUpToInclusive="true" />
</navigation>