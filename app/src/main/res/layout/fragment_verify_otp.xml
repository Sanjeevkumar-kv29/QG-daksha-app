<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.auth.VerifyOtpFragment">

    <data>

        <variable
            name="viewmodel"
            type="com.quickghy.qgdaksha.ui.auth.AuthViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_frag_verify_otp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_enter_mob_numb"
                    style="@style/hey_there_w"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:text="Enter Code" />

                <TextView
                    android:id="@+id/txt_forgot_pass_enter_mob"
                    style="@style/login_here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing=".01"
                    android:text="We have sent you an SMS with the code to your phone number"
                    android:textAlignment="center"
                    android:textSize="@dimen/_10ssp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:weightSum="6">

                    <EditText
                        android:id="@+id/otpET1"
                        style="@style/customET_OTP" />

                    <EditText
                        android:id="@+id/otpET2"
                        style="@style/customET_OTP" />

                    <EditText
                        android:id="@+id/otpET3"
                        style="@style/customET_OTP" />

                    <EditText
                        android:id="@+id/otpET4"
                        style="@style/customET_OTP" />

                    <EditText
                        android:id="@+id/otpET5"
                        style="@style/customET_OTP" />

                    <EditText
                        android:id="@+id/otpET6"
                        style="@style/customET_OTP" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    style="@style/sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Re-send OTP? (30)" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_send_v_code"
                    style="@style/wide_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{viewmodel::doVerifyOTP}"
                    android:text="Verify" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>