<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.VerifyOtpFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txt_enter_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        android:text="Enter otp to verify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_otp_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:hint="otp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_enter_otp" />

    <Button
        android:id="@+id/btn_verify_otp_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify otp"
        app:layout_constraintEnd_toEndOf="@+id/et_otp_signup"
        app:layout_constraintStart_toStartOf="@+id/et_otp_signup"
        app:layout_constraintTop_toBottomOf="@+id/et_otp_signup" />


</androidx.constraintlayout.widget.ConstraintLayout>