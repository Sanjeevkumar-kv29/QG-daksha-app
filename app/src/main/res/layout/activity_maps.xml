<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_gray">

    <ImageButton
        android:id="@+id/map_ui_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/ellipse_29"
        android:src="@drawable/ic_backarrow"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/_210sdp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_sheet_bg"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_arrow_drag_up"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="53dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Makeup Artist"
                android:textAlignment="textStart"
                android:textColor="@color/Black_blue_shade"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/service_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_57sdp"
                android:fontFamily="@font/poppins_light"
                android:text="Personal Care Service"
                android:textAlignment="textStart"
                android:textColor="#CFCFCF"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/service_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="56.42dp"
                android:layout_marginEnd="25dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Order Id: 9023410"
                android:textAlignment="textStart"
                android:textColor="@color/Dark_grey"
                android:textSize="@dimen/_9ssp" />

            <View
                android:id="@+id/bottomsheet_line1"
                style="@style/bottomSheet_line"
                android:layout_below="@id/service_type"
                android:layout_alignStart="@id/service_name"
                android:layout_alignEnd="@id/order_id"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_83sdp"
                android:paddingVertical="@dimen/_10sdp" />

            <TextView
                android:id="@+id/service_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/bottomsheet_line1"
                android:layout_marginTop="@dimen/_95sdp"
                android:text="Service Provider"
                android:textColor="@color/Dark_grey"
                android:textSize="@dimen/_10ssp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/provider_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_pro"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/chit_pic_1_1"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

            <TextView
                android:id="@+id/provider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/provider_pic"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@id/provider_pic"
                android:fontFamily="@font/poppins_semibold"
                android:text="Chanbeej"
                android:textAlignment="textStart"
                android:textColor="@color/Black_blue_shade"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/provider_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/provider_name"
                android:layout_alignStart="@id/provider_name"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/poppins_light"
                android:text="+919993949494"
                android:textAlignment="textStart"
                android:textColor="#708088"
                android:textSize="@dimen/_10ssp" />

            <RatingBar
                android:id="@+id/provider_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/provider_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_27sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="@color/yellow"
                android:rating="4"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:stepSize="0.5" />

            <ImageButton
                android:id="@+id/provider_mssg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/provider_pic"
                android:layout_alignStart="@id/provider_name"
                android:background="@drawable/bottom_sheet_btn_bg"
                android:minWidth="@dimen/_94sdp"
                android:minHeight="40dp"
                android:src="@drawable/ic_bottomsheet_message" />

            <ImageButton
                android:id="@+id/progress_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/provider_pic"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_toEndOf="@id/provider_mssg"
                android:background="@drawable/bottom_sheet_btn_bg"
                android:minWidth="@dimen/_94sdp"
                android:minHeight="40dp"
                android:src="@drawable/ic_bottomsheet_call" />

            <View
                android:id="@+id/bottomsheet_line2"
                style="@style/bottomSheet_line_closer"
                android:layout_below="@id/provider_mssg"
                android:layout_alignStart="@id/service_name"
                android:layout_alignEnd="@id/order_id"
                android:layout_marginTop="@dimen/_17sdp" />

            <TextView
                android:id="@+id/order_add"
                style="@style/bottomSheet_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottomsheet_line2"
                android:layout_alignStart="@id/bottomsheet_line2"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="Address" />

            <TextView
                android:id="@+id/order_address"
                style="@style/bottomSheet_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_add"
                android:layout_alignStart="@id/order_add"
                android:layout_marginTop="-5dp"
                android:text="Cheap House, Dhanpuri, Shahdol, Madhya Pradesh\nPin - 400300" />

            <View
                android:id="@+id/bottomsheet_line3"
                style="@style/bottomSheet_line_closer"
                android:layout_below="@id/order_address"
                android:layout_alignStart="@id/service_name"
                android:layout_alignEnd="@id/order_id"
                android:layout_marginTop="@dimen/_7sdp" />

            <TextView
                android:id="@+id/order_pay"
                style="@style/bottomSheet_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottomsheet_line3"
                android:layout_alignStart="@id/bottomsheet_line3"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="Payment Method" />

            <TextView
                android:id="@+id/order_payment"
                style="@style/bottomSheet_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_pay"
                android:layout_alignStart="@id/order_add"
                android:text="Card"
                android:textColor="@color/Black_blue_shade"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/order_payment_card_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_payment"
                android:layout_alignStart="@id/order_payment"
                android:text="Ending with 888"
                android:textColor="@color/Dark_grey"
                android:textSize="@dimen/_8ssp" />

            <View
                android:id="@+id/bottomsheet_line4"
                style="@style/bottomSheet_line_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/bottomsheet_line3"
                android:layout_alignTop="@+id/bottomsheet_line3"
                android:layout_alignEnd="@+id/bottomsheet_line3"
                android:layout_alignBottom="@id/bottomsheet_line5"
                android:layout_marginStart="186dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="186dp"
                android:layout_marginBottom="0dp" />

            <TextView
                android:id="@+id/order_amou"
                style="@style/bottomSheet_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottomsheet_line3"
                android:layout_alignStart="@id/bottomsheet_line4"
                android:layout_alignTop="@id/order_pay"
                android:layout_marginStart="@dimen/_40sdp"
                android:letterSpacing=".05"
                android:text="Bill Amount" />

            <TextView
                android:id="@+id/order_amount"
                style="@style/bottomSheet_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_amou"
                android:layout_alignStart="@id/order_amou"
                android:text="$ 49990 /-"
                android:textColor="@color/Black_blue_shade" />

            <TextView
                android:id="@+id/order_btn_pay_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_amount"
                android:layout_alignStart="@id/order_amount"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bottom_sheet_btn_bg"
                android:gravity="center"
                android:letterSpacing=".02"
                android:minWidth="@dimen/_90sdp"
                android:minHeight="40dp"
                android:text="Pay Now"
                android:textColor="@color/Black_blue_shade"
                android:textStyle="bold" />

            <View
                android:id="@+id/bottomsheet_line5"
                style="@style/bottomSheet_line_closer"
                android:layout_below="@id/order_btn_pay_now"
                android:layout_alignStart="@id/service_name"
                android:layout_alignEnd="@id/order_id"
                android:layout_marginTop="@dimen/_10sdp" />

            <TextView
                android:id="@+id/order_sta"
                style="@style/bottomSheet_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottomsheet_line5"
                android:layout_alignStart="@id/bottomsheet_line5"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Order Status" />


            <RelativeLayout
                android:id="@+id/order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_sta"
                android:layout_alignStart="@id/order_sta"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_24sdp">

                <View
                    android:id="@+id/order_step_1_dot"
                    style="@style/order_status_dot"
                    android:backgroundTint="@color/yellow" />

                <View
                    android:id="@+id/order_line_1_2"
                    style="@style/order_status_line_vertical"
                    android:layout_below="@id/order_step_1_dot"
                    android:layout_alignStart="@id/order_step_1_dot"
                    android:layout_alignEnd="@id/order_step_1_dot"
                    android:background="@color/yellow" />

                <View
                    android:id="@+id/order_step_2_dot"
                    style="@style/order_status_dot"
                    android:layout_below="@id/order_line_1_2"
                    android:backgroundTint="@color/yellow" />

                <View
                    android:id="@+id/order_line_2_3"
                    style="@style/order_status_line_vertical"
                    android:layout_below="@id/order_step_2_dot"
                    android:layout_alignStart="@id/order_step_2_dot"
                    android:layout_alignEnd="@id/order_step_2_dot"
                    android:background="@color/yellow" />

                <View
                    android:id="@+id/order_step_3_dot"
                    style="@style/order_status_dot"
                    android:layout_below="@id/order_line_2_3"
                    android:backgroundTint="@color/yellow" />

                <View
                    android:id="@+id/order_line_3_4"
                    style="@style/order_status_line_vertical"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@id/order_step_3_dot"
                    android:layout_alignStart="@id/order_step_3_dot"
                    android:layout_alignEnd="@id/order_step_3_dot"
                    android:background="@color/yellow" />

                <View
                    android:id="@+id/order_step_4_dot"
                    style="@style/order_status_dot"
                    android:layout_below="@id/order_line_3_4"
                    android:backgroundTint="@color/yellow" />

                <View
                    android:id="@+id/order_line_4_5"
                    style="@style/order_status_line_vertical"
                    android:layout_below="@id/order_step_4_dot"
                    android:layout_alignStart="@id/order_step_4_dot"
                    android:layout_alignEnd="@id/order_step_4_dot" />

                <View
                    android:id="@+id/order_step_5_dot"
                    style="@style/order_status_dot"
                    android:layout_below="@id/order_line_4_5" />

                <TextView
                    android:id="@+id/order_step_1_title"
                    style="@style/bottomSheet_order_title"
                    android:layout_toEndOf="@id/order_step_1_dot"
                    android:text="Order Placed" />

                <TextView
                    android:id="@+id/order_step_1_time"
                    style="@style/bottomSheet_order_status_sub_detail"
                    android:layout_below="@id/order_step_1_title"
                    android:layout_alignStart="@id/order_step_1_title"
                    android:text="9-July-2021, 9:30 am" />

                <TextView
                    android:id="@+id/order_step_1_time_scheduled"
                    style="@style/bottomSheet_order_status_sub_detail"
                    android:layout_below="@id/order_step_1_time"
                    android:layout_alignStart="@id/order_step_1_title"
                    android:text="Scheduled - 9-July-2021, 10:30 am" />

                <TextView
                    android:id="@+id/order_step_2_title"
                    style="@style/bottomSheet_order_title"
                    android:layout_alignTop="@id/order_step_2_dot"
                    android:layout_toEndOf="@id/order_step_2_dot"
                    android:text="Service Provider has left" />

                <TextView
                    android:id="@+id/order_step_2_time"
                    style="@style/bottomSheet_order_status_sub_detail"
                    android:layout_below="@id/order_step_2_title"
                    android:layout_alignStart="@id/order_step_2_title"
                    android:text="9-July-2021, 9:30 am" />

                <TextView
                    android:id="@+id/order_step_3_title"
                    style="@style/bottomSheet_order_title"
                    android:layout_alignTop="@id/order_step_3_dot"
                    android:layout_toEndOf="@id/order_step_3_dot"
                    android:text="Service Provider has reached" />

                <TextView
                    android:id="@+id/order_step_3_time"
                    style="@style/bottomSheet_order_status_sub_detail"
                    android:layout_below="@id/order_step_3_title"
                    android:layout_alignStart="@id/order_step_3_title"
                    android:text="9-July-2021, 9:30 am" />

                <TextView
                    android:id="@+id/order_step_4_title"
                    style="@style/bottomSheet_order_title"
                    android:layout_alignTop="@id/order_step_4_dot"
                    android:layout_toEndOf="@id/order_step_4_dot"
                    android:text="Service Completed" />

                <TextView
                    android:id="@+id/order_step_4_time"
                    style="@style/bottomSheet_order_status_sub_detail"
                    android:layout_below="@id/order_step_4_title"
                    android:layout_alignStart="@id/order_step_4_title"
                    android:text="9-July-2021, 9:30 am" />

                <TextView
                    android:id="@+id/order_step_5_title"
                    style="@style/bottomSheet_order_title"
                    android:layout_alignTop="@id/order_step_5_dot"
                    android:layout_toEndOf="@id/order_step_5_dot"
                    android:text="Payment Confirmed" />

                <TextView
                    android:id="@+id/order_step_5_time"
                    style="@style/bottomSheet_order_status_sub_detail"
                    android:layout_below="@id/order_step_5_title"
                    android:layout_alignStart="@id/order_step_5_title" />
            </RelativeLayout>

            <View
                android:id="@+id/bottomsheet_line_6"
                style="@style/bottomSheet_line_closer"
                android:layout_below="@id/order_status"
                android:layout_alignStart="@id/service_name"
                android:layout_alignEnd="@id/order_id"
                android:layout_marginTop="@dimen/_10sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bottomsheet_line_6"
                android:layout_marginVertical="@dimen/_5sdp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Cancel Order"
                android:textColor="@color/Red_warm"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>