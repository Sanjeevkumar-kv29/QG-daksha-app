<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.dash.DashActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_activity_dash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_above="@id/llyt" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/searchbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_round_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/dash_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10ssp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="homeclick">

                <ImageButton
                    android:id="@+id/homeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/ic_home_icon"
                    android:onClick="homeclick" />

                <TextView
                    android:id="@+id/tvhome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textColor="@color/dashtextcolor"
                    android:onClick="homeclick" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dash_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10ssp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="profileclick">

                <ImageButton
                    android:id="@+id/profileBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/ic_profileicon"
                    android:onClick="profileclick"/>

                <TextView
                    android:id="@+id/tvprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="@color/dashtextcolor"
                    android:onClick="profileclick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dash_offers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10ssp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="offerclick">

                <ImageButton
                    android:id="@+id/offersBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/ic_bellicon"
                    android:onClick="offerclick"/>

                <TextView
                    android:id="@+id/tvoffers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Offers"
                    android:textAlignment="center"
                    android:textColor="@color/dashtextcolor"
                    android:onClick="offerclick"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/dash_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10ssp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="cartclick">

                <ImageButton
                    android:id="@+id/cartBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/ic_carticon"
                    android:onClick="cartclick"/>

                <TextView
                    android:id="@+id/tvcart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Cart"
                    android:textAlignment="center"
                    android:textColor="@color/dashtextcolor"
                    android:onClick="cartclick"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>