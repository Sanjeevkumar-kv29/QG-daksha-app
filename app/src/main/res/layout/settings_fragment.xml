<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.quickghy.qgdaksha.ui.dash.profile.settings.SettingsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/setting_box"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp"
            android:paddingBottom="@dimen/_18sdp">

            <TextView
                android:id="@+id/setting_title_notif"
                style="@style/setting_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_14sdp"
                android:text="Notification Settings" />

            <RelativeLayout
                android:id="@+id/rl_setting_notif_offer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:onClick="@{viewmodel::switchOfferNotif}"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/setting_ic_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_setting_offer"
                    app:tint="@color/Dark_grey" />

                <TextView
                    android:id="@+id/setting_tv_offer"
                    style="@style/setting_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/setting_ic_offer"
                    android:includeFontPadding="false"
                    android:text="Offer Notifications" />

                <Switch
                    android:id="@+id/setting_switch_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:onClick="@{viewmodel::switchOfferNotif}"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <View
                    style="@style/bottomSheet_line_settings"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_notif_push"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:onClick="@{viewmodel::switchPushNotif}"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/setting_ic_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_setting_push"
                    app:tint="@color/Dark_grey" />

                <TextView
                    android:id="@+id/setting_tv_push"
                    style="@style/setting_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dp"
                    android:layout_toEndOf="@+id/setting_ic_push"
                    android:includeFontPadding="false"
                    android:text="Push Notifications" />

                <Switch
                    android:id="@+id/setting_switch_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:onClick="@{viewmodel::switchPushNotif}"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <View
                    style="@style/bottomSheet_line_settings"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_notif_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:onClick="@{viewmodel::switchTextNotif}"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/setting_ic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_setting_mssg"
                    app:tint="@color/Dark_grey" />

                <TextView
                    android:id="@+id/setting_tv_text"
                    style="@style/setting_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/setting_ic_text"
                    android:includeFontPadding="false"
                    android:text="Text Notifications" />

                <Switch
                    android:id="@+id/setting_switch_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:onClick="@{viewmodel::switchTextNotif}"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <View
                    style="@style/bottomSheet_line_settings"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_notif_mail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:onClick="@{viewmodel::switchMailNotif}"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/setting_ic_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_setting_mail"
                    app:tint="@color/Dark_grey" />

                <TextView
                    android:id="@+id/setting_tv_mail"
                    style="@style/setting_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/setting_ic_mail"
                    android:includeFontPadding="false"
                    android:text="Mail Notifications" />

                <Switch
                    android:id="@+id/setting_switch_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    android:onClick="@{viewmodel::switchMailNotif}"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_lang_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/setting_box"
            android:elevation="3dp"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/setting_title_lang"
                style="@style/setting_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language" />

            <TextView
                style="@style/setting_btn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawablePadding="5dp"
                android:text="Change >" />

            <ImageView
                android:id="@+id/idimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_title_lang"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_baseline_translate_24" />


            <TextView
                style="@style/setting_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_title_lang"
                android:layout_toEndOf="@id/idimg"
                android:text="English" />
        </RelativeLayout>
    </LinearLayout>

</layout>