<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="#F2C300" android:endX="210" android:endY="24" android:startColor="#E57C00" android:startX="70" android:startY="24" android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/yellow" android:endX="210" android:endY="24" android:startColor="@color/app_yellow" android:startX="70" android:startY="24" android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/gray" android:endX="210" android:endY="24" android:startColor="@color/gray" android:startX="70" android:startY="24" android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>